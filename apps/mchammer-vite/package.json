{
  "name": "@topplethenun/mchammer-vite",
  "type": "module",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "nr build:generate-env && nr build:icons && nr build:remix",
    "build:generate-env": "tsx other/generate-env.ts",
    "build:icons": "tsx other/build-icons.ts",
    "build:remix": "vite build && vite build --ssr",
    "clean": "rimraf build public/build",
    "dev": "nr build:generate-env && nr build:icons && node ./server.mjs",
    "lint": "eslint app",
    "lint:fix": "eslint --fix app",
    "start": "cross-env NODE_ENV=production dotenv -e ../../.env -- node ./server.mjs",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@remix-run/express": "2.2.0",
    "@remix-run/node": "2.2.0",
    "@remix-run/react": "2.2.0",
    "@topplethenun/mchammer-env": "workspace:*",
    "express": "4.18.2",
    "isbot": "3.7.0",
    "pino": "8.16.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@antfu/ni": "0.21.9",
    "@remix-run/dev": "2.2.0",
    "@remix-run/eslint-config": "2.2.0",
    "@sly-cli/sly": "1.4.10",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/cookie": "0.5.3",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.3",
    "@types/glob": "8.1.0",
    "@types/lodash-es": "4.17.10",
    "@types/node": "20.8.9",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "autoprefixer": "10.4.16",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "dotenv-cli": "7.3.0",
    "eslint": "8.52.0",
    "execa": "8.0.1",
    "fontpie": "0.3.0",
    "fs-extra": "11.1.1",
    "glob": "10.3.10",
    "jsdom": "22.1.0",
    "node-html-parser": "6.1.11",
    "ofetch": "1.3.3",
    "rimraf": "5.0.5",
    "tailwindcss": "3.3.5",
    "tsx": "3.14.0",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6"
  }
}
