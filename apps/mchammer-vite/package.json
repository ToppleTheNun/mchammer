{
  "name": "@topplethenun/mchammer-vite",
  "type": "module",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "nr build:generate-env && nr build:icons && nr build:remix",
    "build:generate-env": "tsx other/generate-env.ts",
    "build:icons": "tsx other/build-icons.ts",
    "build:remix": "vite build && vite build --ssr",
    "clean": "rimraf build public/build",
    "dev": "nr build:generate-env && nr build:icons && nr dev:remix",
    "dev:remix": "nr with-env node ./server.mjs | pino-pretty",
    "drizzle:gen": "nr with-env drizzle-kit generate:pg",
    "drizzle:migrate": "nr with-env tsx app/lib/db/migrate.ts",
    "drizzle:push": "nr with-env drizzle-kit push:pg",
    "drizzle:seed": "nr with-env tsx app/lib/db/seed.ts",
    "lint": "eslint app",
    "lint:fix": "eslint --fix app",
    "start": "cross-env NODE_ENV=production dotenv -e ../../.env -- node ./server.mjs",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@conform-to/react": "0.9.1",
