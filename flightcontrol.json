{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-1",
      "source": { "branch": "main", "pr": false, "trigger": "push" },
      "services": [
        {
          "id": "remix-app",
          "name": "MCHammer",
          "buildType": "docker",
          "cpu": 0.5,
          "memory": 1,
          "containerInsights": false,
          "minInstances": 1,
          "maxInstances": 1,
          "versionHistoryCount": 10,
          "basePath": ".",
          "dockerfilePath": "./apps/mchammer-vite/Dockerfile",
          "dockerContext": ".",
          "envVariables": {},
          "autoscaling": {
            "cpuThreshold": 70,
            "memoryThreshold": 70,
            "cooldownTimerSecs": 300,
            "requestsPerTarget": 500
          },
          "includeEnvVariablesInBuild": true,
          "type": "fargate",
          "healthCheckPath": "/resources/healthcheck",
          "enableCloudfrontSwr": false,
          "port": 8080
        },
        {
          "id": "database",
          "name": "Database",
          "type": "rds",
          "instanceSize": "db.t4g.micro",
          "private": false,
          "storage": 20,
          "maxStorage": 100,
          "autoUpgradeMinorVersions": true,
          "applyChangesImmediately": false,
          "deletionProtection": false,
          "connectionStringEnvVarName": "DATABASE_URL",
          "engine": "postgres",
          "engineVersion": "15",
          "port": 5432
        },
        {
          "id": "redis",
          "name": "Redis",
          "type": "elasticache",
          "engine": "redis",
          "clusterMode": false,
          "instanceSize": "cache.t4g.small",
          "connectionStringEnvVarName": "REDIS_URL",
          "applyChangesImmediately": false,
          "autoMinorVersionUpgrade": true,
          "port": 6379,
          "encryptionAtRest": true,
          "engineVersion": "7.0",
          "numberOfReplicas": 1
        }
      ]
    }
  ]
}
