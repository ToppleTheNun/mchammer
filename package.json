    "eslint-plugin-react-refresh": "0.4.5",
    "execa": "8.0.1",
    "fontpie": "0.3.0",
    "fs-extra": "11.2.0",
    "glob": "10.3.10",
    "graphql": "16.8.1",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "node-html-parser": "6.1.12",
    "ofetch": "1.3.3",
    "pino-pretty": "10.3.1",
    "prettier": "4.0.0-alpha.4",
    "rimraf": "5.0.5",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "1.0.7",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "unplugin-fonts": "1.1.1",
    "vite": "5.1.3",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "graphql": {
    "schema": "./app/wcl/gql/schema.json"
  },
  "prisma": {
    "seed": "tsx --require dotenv/config --require tsconfig-paths/register prisma/seed.ts"
  }
}
