{
  "name": "@topplethenun/mchammer-monorepo",
  "type": "module",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev --no-cache  --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@antfu/ni": "0.21.9",
    "@turbo/gen": "1.10.16",
    "prettier": "3.1.0",
    "prettier-plugin-pkg": "0.18.0",
    "prettier-plugin-tailwindcss": "0.5.7",
    "turbo": "1.10.16",
    "typescript": "5.2.2"
  },
  "sideEffects": false,
  "pnpm": {
    "patchedDependencies": {
      "@sly-cli/sly@1.4.10": "patches/@sly-cli__sly@1.4.10.patch"
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
