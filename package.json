    "autoprefixer": "10.4.16",
    "dotenv": "16.3.1",
    "dotenv-cli": "7.3.0",
    "drizzle-kit": "0.20.6",
    "eslint": "8.55.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "execa": "8.0.1",
    "fontpie": "0.3.0",
    "fs-extra": "11.2.0",
    "glob": "10.3.10",
    "graphql": "16.8.1",
    "jsdom": "23.0.1",
    "lint-staged": "15.2.0",
    "node-html-parser": "6.1.11",
    "ofetch": "1.3.3",
    "pino-pretty": "10.2.3",
    "prettier": "4.0.0-alpha.4",
    "rimraf": "5.0.5",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "3.3.6",
    "tailwindcss-animate": "1.0.7",
    "tsx": "4.6.2",
    "typescript": "5.3.3",
    "unplugin-fonts": "1.1.1",
    "vite": "5.0.8",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "1.0.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@sly-cli/sly@1.4.10": "patches/@sly-cli__sly@1.4.10.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "graphql": {
    "schema": "./app/wcl/gql/schema.json"
  },
  "prisma": {
    "seed": "tsx --require dotenv/config --require tsconfig-paths/register prisma/seed.ts"
  }
}
