{
  "name": "@topplethenun/mchammer",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.2",
  "author": "Richard Harrah",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nr build:generate-env && nr build:icons && nr build:remix",
    "build:generate-env": "tsx other/generate-env.ts",
    "build:icons": "tsx other/build-icons.ts",
    "build:remix": "remix vite:build",
    "clean": "rimraf build public/build",
    "dev": "nr build:generate-env && nr build:icons && nr dev:remix",
    "dev:remix": "nr with-env:development node ./server.mjs",
    "gql": "nr gql:introspection && nr gql:generate",
    "gql:introspection": "nr with-env tsx other/wcl-introspection.ts",
    "gql:generate": "nr with-env graphql-codegen",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "prisma generate",
    "prisma": "nr prisma:generate && nr prisma:migrate && nr prisma:seed",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "start": "nr with-env:production node ./server.mjs",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc",
    "with-env": "dotenv --",
    "with-env:development": "dotenv -v NODE_ENV=development --",
    "with-env:production": "dotenv -v NODE_ENV=production --"
  },
  "dependencies": {
    "@conform-to/dom": "1.0.1",
    "@conform-to/react": "1.0.1",
    "@conform-to/zod": "1.0.1",
    "@epic-web/client-hints": "1.3.0",
    "@epic-web/invariant": "1.0.0",
    "@epic-web/remember": "1.0.2",
    "@fontsource-variable/inter": "5.0.16",
    "@graphql-typed-document-node/core": "3.2.0",
    "@prisma/client": "5.11.0",
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-dialog": "1.0.5",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-hover-card": "1.0.7",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-scroll-area": "1.0.5",
    "@radix-ui/react-select": "2.0.0",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tooltip": "1.0.7",
    "@remix-run/dev": "2.6.0",
    "@remix-run/express": "2.6.0",
    "@remix-run/node": "2.6.0",
    "@remix-run/react": "2.6.0",
    "@sentry/remix": "7.101.0",
    "@tanstack/react-table": "8.11.8",
    "address": "2.0.1",
    "class-variance-authority": "0.7.0",
    "close-with-grace": "1.2.0",
    "clsx": "2.1.0",
    "cmdk": "0.2.1",
    "compression": "1.7.4",
    "cookie": "0.6.0",
    "date-fns": "3.3.1",
    "drizzle-orm": "0.29.3",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "get-port": "7.0.0",
    "graphql-request": "6.1.0",
    "graphql-tag": "2.12.6",
    "helmet": "7.1.0",
    "isbot": "4.4.0",
    "kleur": "4.1.5",
    "morgan": "1.10.0",
    "nanoid": "5.0.5",
    "postgres": "3.4.3",
    "prisma": "5.11.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-wrap-balancer": "1.1.0",
    "redis": "4.6.13",
    "remix-themes": "1.3.1",
    "tailwind-merge": "2.2.1",
    "ts-dedent": "2.2.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.4",
    "@antfu/ni": "0.21.12",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/introspection": "4.0.2",
