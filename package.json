{
  "name": "@topplethenun/mchammer",
  "type": "module",
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "pnpm run build:generate-env && pnpm run build:icons && pnpm run build:remix && pnpm run build:server",
    "build:generate-env": "tsx ./other/generate-env.ts",
    "build:icons": "tsx ./other/build-icons.ts",
    "build:remix": "remix vite:build --sourcemapClient --sourcemapServer",
    "build:server": "tsx ./other/build-server.ts",
    "dev": "pnpm run build:icons && node ./server/dev-server.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gql": "pnpm run gql:introspection && pnpm run gql:generate",
    "gql:generate": "graphql-codegen",
    "gql:introspection": "tsx other/wcl-introspection.ts",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix .",
    "prisma": "pnpm run prisma:generate && pnpm run prisma:migrate && pnpm run prisma:seed",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "setup": "pnpm run build && prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node .",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@conform-to/dom": "1.0.4",
