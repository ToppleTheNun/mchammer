{
  "name": "@topplethenun/mchammer",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "author": "Richard Harrah",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "nr build:generate-env && nr build:icons && nr build:remix",
    "build:generate-env": "tsx other/generate-env.ts",
    "build:icons": "tsx other/build-icons.ts",
    "build:remix": "vite build && vite build --ssr",
    "clean": "rimraf build public/build",
    "dev": "nr build:generate-env && nr build:icons && nr dev:remix",
    "dev:remix": "nr with-env node ./server.mjs | pino-pretty",
    "gql": "nr gql:introspection && nr gql:generate",
    "gql:introspection": "nr with-env tsx other/wcl-introspection.ts",
    "gql:generate": "nr with-env graphql-codegen",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "prisma generate",
    "prisma": "nr prisma:generate && nr prisma:migrate && nr prisma:seed",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "start": "node ./server.mjs",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc",
    "with-env": "dotenv --",
    "with-env:production": "dotenv -v NODE_ENV=production --"
  },
  "dependencies": {
    "@conform-to/dom": "0.9.1",
    "@conform-to/react": "0.9.1",
    "@conform-to/zod": "0.9.1",
    "@epic-web/client-hints": "1.2.2",
    "@epic-web/invariant": "1.0.0",
    "@epic-web/remember": "1.0.2",
    "@fontsource-variable/hepta-slab": "5.0.18",
    "@fontsource-variable/inter": "5.0.16",
    "@graphql-typed-document-node/core": "3.2.0",
    "@isaacs/express-prometheus-middleware": "1.2.1",
    "@prisma/client": "5.7.0",
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-dialog": "1.0.5",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-hover-card": "1.0.7",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-scroll-area": "1.0.5",
    "@radix-ui/react-select": "2.0.0",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tooltip": "1.0.7",
    "@remix-run/dev": "2.3.1",
    "@remix-run/express": "2.3.1",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "@sentry/remix": "7.87.0",
    "@tanstack/react-table": "8.10.7",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "cmdk": "0.2.0",
    "cookie": "0.6.0",
    "date-fns": "2.30.0",
    "drizzle-orm": "0.29.1",
    "express": "4.18.2",
    "graphql-request": "6.1.0",
    "graphql-tag": "2.12.6",
    "isbot": "3.7.1",
    "nanoid": "5.0.4",
    "pino": "8.17.0",
    "pino-http": "8.5.1",
    "postgres": "3.4.3",
    "prisma": "5.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-wrap-balancer": "1.1.0",
    "redis": "4.6.11",
    "remix-themes": "1.2.2",
    "tailwind-merge": "2.1.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.4.5",
    "@antfu/ni": "0.21.12",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-graphql-request": "6.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@sentry/vite-plugin": "2.10.2",
    "@sly-cli/sly": "1.4.10",
    "@total-typescript/ts-reset": "0.5.1",
    "@tsconfig/vite-react": "3.0.0",
    "@types/cookie": "0.6.0",
    "@types/eslint": "8.44.9",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/glob": "8.1.0",
    "@types/lodash-es": "4.17.12",
